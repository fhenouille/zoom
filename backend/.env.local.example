# ========================================
# CONFIGURATION DÉVELOPPEMENT LOCAL
# ========================================
# À utiliser pour le développement local avec H2 Database

# ========================================
# SÉCURITÉ - Valeurs par défaut pour le dev
# ========================================

# Pour le développement local, vous pouvez utiliser une clé simple
# En production, TOUJOURS générer une clé aléatoire sécurisée
JWT_SECRET=dev-secret-key-not-for-production-please-change-in-production

# Mot de passe admin pour le développement
ADMIN_PASSWORD=z00Mons

# Activer le diagnostic de BD en développement
DEBUG_DATABASE_CONFIG=true

# Activer la console H2 pour le développement local
ENABLE_H2_CONSOLE=true

# ========================================
# ZOOM API - Configuration de test
# ========================================
# Remplir avec vos credentials Zoom pour tester localement

ZOOM_ACCOUNT_ID=your-account-id
ZOOM_CLIENT_ID=your-client-id
ZOOM_CLIENT_SECRET=your-client-secret
ZOOM_USER_ID=user@example.com

# ========================================
# BASE DE DONNÉES - H2 (Dev local)
# ========================================

# En développement local, H2 en mémoire est configuré dans application.properties
# Pas besoin de DATABASE_URL pour le développement local

# ========================================
# ENVIRONNEMENT
# ========================================

SPRING_PROFILES_ACTIVE=local

# ========================================
# LOGGING - Verbose en développement
# ========================================

# Ces valeurs sont définies dans application.properties
# mais vous pouvez les surcharger ici si nécessaire
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_ZOOM=DEBUG
LOGGING_LEVEL_ORG_HIBERNATE_SQL=WARN
